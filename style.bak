@page {
  size: 8in 5in; // cnt change this
  margin-top: 0.25in;// u can change 
  margin-bottom: 0.5in;
  font-weight: 400;
  font-style: normal;
  bleed: 0.25in;
  marks: crop;
}


.two-col {
  column-count: 2;
  column-gap: 2em;
}
@page:left {
  margin-left: 0.25in;
  margin-right: 1in;
  @bottom-left {
    content: counter(page);
  }
  @bottom-right {
    content:"Around the World in NYC";
    font-family: "new-hero", sans-serif;
  }
}
@page:right {
  margin-left: 1in;
  margin-right: 0.25in;
  @bottom-left {
    content:"Chloé Nini";
    font-family: "new-hero", sans-serif;
  }
  @bottom-right {
    content: counter(page);
    font-family: "new-hero", sans-serif;
font-weight: 400;
font-style: normal;
  }
}

@page {
  size: 8in 4.75in;  /* original width (5") – bleed (0.25") */
  bleed: 0.25in;
  marks: crop;
}
@page:left {
  margin-left: 0.25in;
  margin-right: 0.75in; /* original width (1") – bleed (0.25") */
}
@page:right {
  margin-left: 0.75in; /* original width (1") – bleed (0.25") */
  margin-right: 0.25in; 
}
